<?xml version="1.0" encoding="utf-8"?>

<LinearLayout style="@style/Theme.TransSysBar" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bangmod_login_bg">
    
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/beam_icon_white"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:text="\t\t\t\tWelcome to\nBangMod Wallet"/>

    <View
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:text="KMUTT Mobile Payment Service"/>
    
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="Get Start"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#ffffff"/>

</LinearLayout>
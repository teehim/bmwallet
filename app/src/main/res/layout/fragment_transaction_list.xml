<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="customer.bmwallet.com.bangmodwallet.TransactionListFragment"
    android:orientation="vertical"
    android:background="#2fa7fc">

    <!-- TODO: Update blank fragment layout -->

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center"
       android:background="#ffffffff"
       android:weightSum="2">
       <TextView
           android:id="@+id/trans_period"
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:paddingLeft="10dp"
           android:text=""
           android:hint="PERIOD"
           android:onClick="setFilterOnClick"
           android:layout_weight="1"
           style="@android:style/Widget.Holo.Light.Spinner" />

       <TextView
           android:id="@+id/trans_type"
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:paddingLeft="10dp"
           android:layout_weight="1"
           android:onClick="setFilterOnClick"
           android:text=""
           android:hint="TYPE"
           style="@android:style/Widget.Holo.Light.Spinner" />

   </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trans_list"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1" />
</LinearLayout>